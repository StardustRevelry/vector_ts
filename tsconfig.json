{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/tests/*"],
}


